# Render Production Environment Variables
# Copy these to Render environment variables in Dashboard

# Application Settings
FLASK_ENV=production
SECRET_KEY=your_production_secret_key_here_change_this_to_something_very_secure
PORT=10000
PYTHONUNBUFFERED=1

# Database (will be automatically provided by Render PostgreSQL service)
# DATABASE_URL=postgresql://user:password@host:port/database
# Note: Use the Internal Database URL from your PostgreSQL service

# Application Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# Optional: AWS S3 Integration (if needed)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET=your_s3_bucket_name

# Render Detection (automatically set by Render)
# RENDER=true
# RENDER_SERVICE_NAME=your-service-name

# Security Headers (optional)
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Performance Settings
WEB_CONCURRENCY=4
WORKER_TIMEOUT=120
KEEP_ALIVE=2

# Logging
LOG_LEVEL=INFO
LOG_TO_STDOUT=true